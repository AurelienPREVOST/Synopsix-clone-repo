<div class="form">
  <div class="d-none d-flex justify-content-center" id="new-game">
    <%= link_to "New Game", root_path, class: "btn-input p-2"%>
  </div>
  <% label = player_game.game.input? ? "Guess a word" : "Guess the title" %>

  <%= simple_form_for([player_game, input],
    data: {
      game_input_target: "form",
      action: "submit->game-input#send"
    }) do |f| %>

      <div class="d-flex align-items-start justify-content-center">
        <div class="form-inputs">
          <%= f.input :content, label: false, input_html: { data: { game_input_target: 'input'}} %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Play", class:"btn-input mb-3 ms-1" %>
        </div>
      </div>
  <% end %>
</div>
