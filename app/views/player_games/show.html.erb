 <div class="container"
  data-controller="game-input"
  data-game-input-gametype-value="<%= @player_game.game.game_type %>"
  data-game-input-timerpath-value="<%= player_game_timers_path(@player_game) %>"
  data-game-input-numwords-value="<%= @player_game.words.keys.count %>"
 >
    <br><br><br><br><br>
    <%# A RETRAVAILLER EN JOUANT SUR LA POSITION FIXY DE LA NAVBAR PAS LE TEMPS LA %>
 <div class="row">
    <div class="col col-9">
      <h2 class="text-center">What's the movie ?</h2>
    </div>

 </div>

<%# INTEGRE LE FORM INPUT %>
 <div class="row">
  <div class="col-2 mx-5">
    <div class="col col-3">
      <% if @player_game.game.timer? %>
        <div data-game-input-target="timer"></div>
      <% end %>
    </div>
  </div>
  <div class="col-8 p-0">
    <div class="mt-5">
      <%= render "form_input", player_game: @player_game, input: @input %>
    </div>
  </div>

 </div>
<%# CI DESSOUS INTEGRE LA PARTIAL AVEC LES 5 DERNIERS ESSAI ET LE JEU %>
 <div class="row">

    <div class="col col-12">
      <div data-game-input-target="gameContent">
        <%= render "game_content", player_game: @player_game %>
      </div>
    </div>

 </div>





</div>
