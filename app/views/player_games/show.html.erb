 <div class="container">

  <div class="mt-5">
    <%= simple_form_for [ @player_game, @input] do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :content, :label => " Guess a word" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Play" %>
      </div>
    <% end %>
  </div>


  <div class="mt-5">
    <p>Last five tries:</p>
    <ul>
    <% @inputs.each_with_index do |input, index| %>
      <li><%= index + 1 %> - <%= input.content %></li>
    <% end %>
    </ul>
  </div>

  <div class="mt-5">
    <h2><%= @hidden_title  %></h2>
    <p><%= @hidden_synopsis  %></p>
  </div>

  <div>
  <% if @player_game.title_found %>
    <h2>Congratulations, you win!</h2>
  <% end %>
  <h2><%= @title %></h2>
  </div>

  <% console %>
 </div>
