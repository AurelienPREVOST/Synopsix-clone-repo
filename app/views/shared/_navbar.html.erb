<div class="navbar navbar-expand-sm navbar-light navbar-synopsix">
  <div class="container-fluid">
    <%= link_to root_path, class: "text-decoration-none colortextlogo" do  %>
      <div class="title">
        <%=image_tag "navbar_img.svg"%>
      </div>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <%# if user_signed_in? %>
          <% if user_signed_in? %>
            <li class="nav-item active">
              <%= link_to "Dashboard", dashboard_path, class: "btn-small-red nav-link" %>
            </li>
          <% else %>
            <%= link_to "Login", new_user_session_path, class: "btn-small-red text-decoration-none" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "btn-small-grey text-decoration-none"  %>
          <% end %>
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <%= cl_image_tag current_user.photo.key, width:50, height: 50, class:"dropdown-toggle rounded-circle", data: {bs_toggle: "dropdown"} %>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%= link_to "Go to my dashboard", dashboard_path, class: "dropdown-item" %>
                <%= link_to "Logout", destroy_user_session_path, 'data-turbo-method': :delete, class: "dropdown-item"%>
              </div>
            </li>
          <% end %>
        <%# else %>
          <!--li class="nav-item"-->
            <%#= link_to "Login", new_user_session_path, class: "nav-link" %>
          <!--/li-->
        <%# end %>
      </ul>
    </div>
  </div>
</div>
