<div class="row justify-content-around mt-5">
  <div class="col-4 bg-green rounded p-3 tab-my-stats">
    <div class= "text-center">
      <h5 >My Stats</h5>
      <%= cl_image_tag current_user.photo.key, width:50, height: 50, class:"rounded-circle my-2" %>
      <h5><%=current_user.username%></h5>
    </div>
    <hr>
    <h6>Score: <%=current_user.inputgame_score%> points </h6>
    <hr>
    <% if wins_inputgame.count > 1  %>
      <h6><%=wins_inputgame.count %>  Games Won</h6>
    <% else %>
      <h6> <%=wins_inputgame.count %>  Game Won</h6>
    <% end %>
    <ul>
    <% wins_inputgame.each do |game|  %>
      <li>
        <%= game.movie.title  %>
      </li>
    <% end %>
    </ul>

  </div>
    <div class="col-6 bg-light-red rounded p-3 tab-leaderboard">
    <h5 class="text-center">Leaderboard</h5>
    <hr>
    <% players_inputgame.each_with_index do |player, index| %>
    <h6 class="leaderboard-position"><%= index + 1 %>. <%= player.username %> - <%= player.inputgame_score %> points  <%= cl_image_tag player.photo.key, width:25, height: 25, class:"rounded-circle my-1" %></h6>
    <% end %>
  </div>
</div>
