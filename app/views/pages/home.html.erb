<h1>Welcome to Synopsix</h1>
<h2>Choose a Category</h2>

<div data-controller="categories">
  <% Category.all.each.with_index do |category, index| %>
    <div class="card" data-action="click->categories#select" data-number="<%=index+1%>"
         data-categories-target="card">
      <div>
        <div id="box"></div>
        <button id="btn"><%=category.name%></button>
      </div>
    </div>
  <%end%>

    <%= simple_form_for [@player_game] do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="d-none">
        <%= f.input :category,
                  as: :radio_buttons,
                  input_html: {class: 'category-selector'},
                  collection: Category.all %>
      </div>

      <%= f.submit "Start the game", class: "btn btn-primary"%>
    <% end %>
</div>



